.slider
  margin 50px auto
  width 80%
  height 100%
  position relative
  &__slides
    position relative
    margin 0 auto
    width auto
    height 0
    padding-bottom 66%
    &_slide
      position absolute
      left 0
      top 0
      width 100%
      height 100%
      opacity 0
      z-index 1
      transition opacity 1s
      background-size cover
      &:nth-of-type(1)
        background-image url('./../assets/image/bg_1.jpg')
      &:nth-of-type(2)
        background-image url('./../assets/image/img_01.jpg')
      &:nth-of-type(3)
        background-image url('./../assets/image/img_02.jpg')
      &:nth-of-type(4)
        background-color blue
      &:nth-of-type(5)
        background-color purple

.showing
  opacity 1
  z-index 2