@import'./variables.styl';

.blocking
  display none

.blocking.showed
  display block
  position fixed
  top 0
  left 0
  border 1px solid red
  width 100vw
  height 100vh
  background-color alpha($Gray, .75)
  z-index 10
  .modal
    position fixed
    border 1px solid red
    width 50%
    max-height 100%
    top 50%
    left 50%
    transform translate(-50%, -50%)
    background-color $white
    .header
      display none
      height 100%
      &__img
        padding 20px
        > img
          max-width 300px
      &__text
        padding 20px 40px
        > p
          margin 15px 0
    .header.modal_1.showed2
      display flex
      height 100%
    .header.modal_2.showed2
      display flex
      height 100%



  .relative
    position relative
    .btnClosed
      position absolute
      left 50%
      bottom 0
      transform translate(-50%, -50%)
      padding 10px 50px