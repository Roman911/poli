@import'./variables.styl';

.clock
  display flex
  position absolute
  bottom 100px
  left 50%
  transform translateX(-50%)
  &__block
    display flex
    flex-direction column
    border 1px solid $lil - 70%
    border-radius 15px
    margin 7px
    width 70px
    padding 15px 0
    background-color #e7d5fb
    background: radial-gradient(ellipse at center, alpha($lil, 1) 0%, alpha($lil - 40%, 1) 100%)
    > span
      color $pink - 40%
      font-size 3rem
  &__smalltext
    color $pink - 50%