@import'./variables.styl';

.lisa
  position fixed
  bottom 5%
  left 95%
  transform translate(-50%)
  z-index 5
  opacity 0.6
  &:hover
    opacity 1
  &__up
    position relative
    > img
      width 100px
  &__text
    position absolute
    top 15px
    left -2px
    border 1px solid $lil - 70%
    border-radius 15px
    padding 3px 24px
    background-color #e7d5fb
    background: radial-gradient(ellipse at center, alpha($lil, 1) 0%, alpha($lil - 40%, 1) 100%)
    > p
      color $pink - 50%
      font-size .8rem