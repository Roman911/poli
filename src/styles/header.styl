@import'./variables.styl';

.header
  position relative
  box-sizing border-box
  height 100vh

  .head
    text-align center
    &__text
      position absolute
      top 40%
      left 50%
      transform translate(-50%)
      color $white
      > h2
        margin-top 20px

.bg
  background-image url('./../assets/image/img_01.jpg')
  opacity .8
  background-position center, center
  background-size cover
  background-attachment fixed
