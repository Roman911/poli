@import'./variables.styl';

.header
  position relative
  box-sizing border-box
  height 100vh
  display flex
  flex-direction column
  justify-content center

  .head
    width 50%
    text-align center
    &__text
      padding 50px 40px
      color $pink - 40%
      font-style italic
      > h1
        font-size 2rem
        margin-bottom 40px
      > h2
        font-size 1.5rem
        margin-top 60px

.header.bg
  background-image url('./../assets/image/img_01.jpg')

@media screen and (max-width: $mobile)
  .header
    .head
      width 100%
      &__text
        padding 50px 40px 20px
        > h1
          font-size 1.5rem
          margin-bottom 20px
        > h2
          font-size 1.2rem
          margin-top 10px
          margin-bottom 20px