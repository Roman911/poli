@import'./variables.styl';

.card
  border 1px solid $pink
  background-color $lil
  background linear-gradient(to bottom, alpha($lil + 50%, .7) 0%, alpha($lil + 90%, .2) 100%)
  margin 10px
  box-shadow 0 0 10px 3px $Gray + 20%
  transition .5s
  &__head
    padding 10px 0
    text-align center
    > h3
      text-transform uppercase
      color $lil - 20%
  &__img
    padding 5px 15px
    > img
      max-width 100%
  &__description
    padding 10px
    > p
      text-align center
      font-style italic
      text-transform uppercase
      color $pink - 20%
  &__buttons
    padding 15px 20px
    font-size 1rem

    .btn
      padding 7px 45px
      color $pink - 30%
      font-size 1rem
      cursor pointer
      transition .5s
      &:hover
        transform scale(1.01, 1.01)
        transition .5s

  &:hover
    box-shadow 0 0 10px 7px $Gray + 20%
    transform scale(1.01, 1.01)
    transition .5s
