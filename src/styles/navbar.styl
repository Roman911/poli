@import'./variables.styl';

.navbar
  position absolute
  top 0
  left 0
  width 100%
  background-color alpha($pink, .3)
  z-index 5


  .page-content
    > ul
      display flex
      justify-content space-between
      > li
        width 100%
        height 100%
        text-align center
        cursor pointer
        > a
          color $white
        &:hover
          background-color $pink - 20%

    .button
      padding 20px

.fixed
  position fixed
  background-color $lil - 20%
  box-shadow 0 0 4px 4px $Gray


.navbar.fixed
  animation-name example
  animation-duration .5s

@keyframes example
  0%
    transform translateY(-100%)
  100%
    transform translateY(0%)
