@import'./variables.styl';

.navbar
  position absolute
  top 0
  left 0
  width 100%
  background-color alpha($pink, .3)
  z-index 5
  &__control
    display none

  .page-content
    > ul
      display flex
      justify-content space-between
      > li
        width 100%
        text-align center
        cursor pointer
        transition 0.5s
        .button
          > p
            font-size 1.4rem
            color $pink
        &:hover
          background-color alpha($pink, .2)
          transition 0.5s
          .button
            > p
              color $pink - 15%
    .button
      padding 20px

.fixed
  position fixed
  background-color $lil - 10%
  box-shadow 0 0 4px 4px $Gray
  .page-content
    > ul
      > li
        .button
          > p
            color $pink - 25%
        &:hover
          background-color $pink - 10%
          .button
            > p
              color $lil - 20%

.navbar.fixed
  animation-name example
  animation-duration .5s


@keyframes example
  0%
    transform translateY(-100%)
  100%
    transform translateY(0%)

@media screen and (max-width: $mobile)
  .navbar
    position relative
    &__blind
      position fixed
      width 100vw
      height 100vh
      background $lil - 40%
      transform translateX(-100%)
      transition 1s
      .page-content
        > ul
          flex-direction column
          justify-content center
          height 100%
    &__control
      display block
      position fixed
      top 4%
      left 8%
      padding 6px
      border 2px solid alpha($lil, .4)
      border-radius 20px
      .line
        width 25px
        height 3px
        margin 3px
        background-color alpha($lil, .4)

  .navbar__blind.showed
    transform translateX(0)
